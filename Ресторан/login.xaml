<Window x:Class="Ресторан.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ресторан"
        mc:Ignorable="d"
        Title="login" Height="540" Width="800">
    <Grid>
        <Image Source="Resources/фон1.jpg" HorizontalAlignment="Left" Height="511" Margin="13,-1,0,0" VerticalAlignment="Top" Width="767" RenderTransformOrigin="0.482,0.506">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.04"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0.447"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Border MinWidth="400" Margin="198,101,195.333,69.667" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20" Height="332">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Black" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel Margin="0,-20,0,-30" Width="362">
                <TextBlock Text="Войти" FontSize="30" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" FontFamily="MS PGothic"/>
                <Label Content="Введите логин:" HorizontalAlignment="Center" Height="28"/>
                <TextBox x:Name="textBox_login" HorizontalAlignment="Center" Width="153" Height="24" />
                <Label Content="Введите пароль:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,132,0"/>
                <PasswordBox x:Name="password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="153" Height="25"/>
                <Button x:Name="enter" Click="enter_Click" Content="Войти" HorizontalAlignment="Center" Width="96" Height="22" Margin="133,0"/>
                <Button x:Name="regis1" Click="regis1_Click" Content="Регистрация" HorizontalAlignment="Center" Width="96" Height="23" Margin="133,0"/>
                <Button x:Name="enterGos" Click="enterGos_Click" Content="Войти, как гость" HorizontalAlignment="Center" Width="96" Height="23"/>
            </StackPanel>

        </Border>

    </Grid>
</Window>
